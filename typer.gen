	showIndent(1).."for (int i = 0, j = 0; i < Enum1s && j < Enum2s; i++, j++)\n"..
	showIndent(2).."if (strcmp(Constant1__Enum1__Str(i),(Constant1__Enum1__Enum2_Str(Value11))(j)) != 0) return -1;\n"..
	showIndent(1).."if (argc == 4) {\n"..
